<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPlacedScreen">
  <ImageView
      android:id="@+id/crossButton"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_alignParentTop="true"
      android:layout_marginTop="30dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="30dp"
      android:src="@drawable/close"/>
  <ImageView
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="200dp"
      android:src="@drawable/ic_baseline_done_24"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="Order Placed!"
      android:textSize="30dp" />
  <TextView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="230dp"
      android:textAlignment="center"
      android:text="Your Order Was Placed Successfully.\nFor More Details. Check All My Orders Page Under Profile Tab"
      android:gravity="center_horizontal" />

  <TextView
      android:id="@+id/myOrdersButton"
      android:layout_width="150dp"
      android:layout_height="50dp"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textAlignment="center"
      android:layout_alignParentBottom="true"
      android:layout_centerVertical="true"
      android:text="MY ORDERS"
      android:layout_marginBottom="70dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/ic_baseline_view_agenda_24"
      android:gravity="center_vertical"
      tools:ignore="RtlCompat" />


</RelativeLayout>