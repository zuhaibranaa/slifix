<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        app:cardBackgroundColor="@color/color_assets_5"
        android:layout_marginLeft="5dp"
        card_view:cardElevation="5dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/cartViewItemFragmentTitle"
            android:text="Small Shami Burger"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/cartViewFragmentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cartViewFragmentQuantity"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="190dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="0"
            android:background="@drawable/textboxround"
            android:gravity="center_horizontal" />
<ImageView
    android:id="@+id/deleteButton"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_baseline_delete_forever_24"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="290dp"
    />

    </androidx.cardview.widget.CardView>
</RelativeLayout>