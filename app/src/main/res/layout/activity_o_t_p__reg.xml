<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".login.OTP_Reg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_verification_register"
        android:textColor="@color/app"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.08" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_6_digit_code_sent_to_you_at"
        android:textColor="@color/itc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_sans"/>

    <EditText
        android:id="@+id/otpField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_weight="0.98"
        android:height="40dp"
        android:background="@drawable/textbox"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/num_hint"
        android:inputType="number"
        android:longClickable="false"
        android:padding="2dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otpSubmit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/submit"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69"
        app:strokeColor="@color/app" />

</androidx.constraintlayout.widget.ConstraintLayout>