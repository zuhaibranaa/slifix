<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_assets_5"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/cartFragmentTitle"
            android:text="Small Shami Burger"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/catrFragmentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="290dp"/>

        <TextView
            android:id="@+id/cartFragmentQuantity"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="0"
            android:background="@drawable/textboxround"
            android:gravity="center_horizontal" />


        <TextView
            android:textColor="@color/white"
            android:layout_width="70dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle3"
            android:layout_marginLeft="270dp"
            android:text="update"
            android:gravity="center"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/cartFragmentAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="33dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="@drawable/aa"
            android:textColor="@color/white"
            android:text="+"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/cartFragmentRemoveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="33dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/aqw"
            android:text="-"
            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" />


    </androidx.cardview.widget.CardView>
</RelativeLayout>