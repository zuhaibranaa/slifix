<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeightLarge"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp">
    <androidx.cardview.widget.CardView
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@color/color_assets_5"
        card_view:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/cartFragmentTitle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/catrFragmentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/cartFragmentQuantity"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:layout_toStartOf="@+id/updateCart"
                android:layout_toLeftOf="@+id/updateCart"
                android:background="@drawable/textboxround"
                android:gravity="center_horizontal"
                android:text="@string/_1"
                android:textAlignment="center"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/updateCart"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle3"
                android:text="@string/update"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/cartFragmentAddBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_toStartOf="@+id/updateCart"
                android:layout_toLeftOf="@+id/updateCart"
                android:background="@drawable/aa"
                android:gravity="center_horizontal"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cartFragmentRemoveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/cartFragmentAddBtn"
                android:layout_toLeftOf="@+id/cartFragmentAddBtn"
                android:background="@drawable/aqw"
                android:gravity="center_horizontal"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:ignore="RelativeOverlap,RtlCompat" />
            <TextView
                android:id="@+id/itemsInCartCounter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>